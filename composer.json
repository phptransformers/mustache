{
    "name": "phptransformers/mustache",
    "description": "Mustache support for PHPTransformers.",
    "keywords": [
        "phptransformers",
        "mustache"
    ],
    "homepage": "https://github.com/phptransformers/mustache",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Loach",
            "email": "robloach@gmail.com",
            "homepage": "http://robloach.net",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.3.0",
        "mustache/mustache": "~2.8",
        "phptransformers/phptransformer": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.6",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "PhpTransformers\\Mustache\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpTransformers\\Mustache\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always --coverage-text --coverage-clover=coverage.clover",
        "phpcs": "phpcs"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
